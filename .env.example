# ============================================================
# .env.example для REPO ЗБІРКИ ОБРАЗУ (docker-compose.yaml)
# Залишено тільки змінні, які реально потрібні для запуску стеку.
# ============================================================

# --- Koha image (локальний smoke або публічний тег) ---
KOHA_IMAGE_NAME=koha-local
KOHA_IMAGE_TAG=25.05

# --- Koha runtime ---
KOHA_INSTANCE=library
KOHA_DOMAIN=example.local
KOHA_TIMEZONE=Europe/Kyiv
KOHA_LANGS=uk-UA

KOHA_OPAC_PORT=8080
KOHA_INTRANET_PORT=8081
KOHA_OPAC_PREFIX=
KOHA_OPAC_SUFFIX=
KOHA_INTRANET_PREFIX=
KOHA_INTRANET_SUFFIX=-intra

# --- Database ---
DB_HOST=db
DB_PORT=3306
DB_NAME=koha_library
DB_USER=koha_db
DB_PASS=change_me_db_pass
DB_ROOT_PASS=change_me_db_root_pass

# --- RabbitMQ ---
RABBITMQ_USER=koha_mq
RABBITMQ_PASS=change_me_mq_pass

# --- Search/cache ---
USE_ELASTICSEARCH=true
ELASTICSEARCH_HOST=es:9200
MEMCACHED_SERVERS=memcached:11211

# --- Volumes ---
VOL_DB_PATH=$HOME/Koha/koha-volumes/mysql_data
VOL_ES_PATH=$HOME/Koha/koha-volumes/elastic_data
VOL_KOHA_CONF=$HOME/Koha/koha-volumes/koha_config
VOL_KOHA_DATA=$HOME/Koha/koha-volumes/koha_data
VOL_KOHA_LOGS=$HOME/Koha/koha-volumes/koha_logs

# --- Side services images ---
MARIADB_IMAGE_NAME=docker.io/mariadb
MARIADB_IMAGE_TAG=11
ES_IMAGE_NAME=docker.io/elasticsearch
ES_IMAGE_TAG=8.19.6
RABBITMQ_IMAGE_NAME=docker.io/rabbitmq
RABBITMQ_IMAGE_TAG=3-management
MEMCACHED_IMAGE_NAME=docker.io/memcached
MEMCACHED_IMAGE_TAG=1.6
CLOUDFLARED_IMAGE_NAME=cloudflare/cloudflared
CLOUDFLARED_IMAGE_TAG=2026.2.0

# --- Optional: only if service "tunnel" is used ---
CLOUDFLARE_TOKEN=
