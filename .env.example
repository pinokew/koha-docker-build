#=== Налаштування Koha ===

KOHA_IMAGE_TAG=25.05

#Назва вашого локального образу

KOHA_IMAGE_NAME=koha-local

#Назва екземпляра Koha (наприклад: library)

KOHA_INSTANCE=library

#Доменне ім'я (якщо використовується)

KOHA_DOMAIN=

#Часовий пояс (для контейнера Koha та налаштувань)

KOHA_TIMEZONE=Europe/Kyiv
KOHA_LANGS=uk-UA

# === Керування runtime-пайплайном налаштування ===
# Якщо true, пайплайн зупиниться на першому кроці з помилкою (required або optional)
KOHA_SETUP_FAIL_FAST=false
# Обов'язкові кроки через пробіл (помилки optional-кроків не зупиняють старт)
KOHA_SETUP_REQUIRED_STEPS="00-env-checks.sh"
# Шаблони кроків для пропуску через пробіл, наприклад: "10-languages.sh 09-*"
KOHA_SETUP_SKIP_STEPS=""
# Дозволений список через пробіл; якщо задано, запускаються тільки ці кроки
KOHA_SETUP_ONLY_STEPS=""


#=== Налаштування Бази Даних ===

#Ім'я бази даних для Koha

DB_NAME=koha_library

#Користувач бази даних для Koha

DB_USER=koha_db

#Пароль 

DB_PASS=dbpass1234
DB_ROOT_PASS=rootpass1234

#=== Налаштування RabbitMQ ===

#(Логін та пароль для RabbitMQ)

RABBITMQ_USER=koha_mq
RABBITMQ_PASS=rabbitmqpass1234

#=== Налаштування Elasticsearch ===
USE_ELASTICSEARCH=true
ELASTICSEARCH_HOST=es:9200

KOHA_INTRANET_PORT=8081
KOHA_OPAC_PORT=8080

KOHA_INTRANET_PREFIX=""
KOHA_INTRANET_SUFFIX="-intra"
KOHA_OPAC_PREFIX=""
KOHA_OPAC_SUFFIX=""

ZEBRA_MARC_FORMAT=marc21
ZEBRA_LANGUAGE=uk
BIBLIOS_INDEXING_MODE=dom
AUTHORITIES_INDEXING_MODE=dom
USE_MEMCACHED=yes
MEMCACHED_SERVERS=memcached:11211

DB_HOST=db
DB_PORT=3306

# Backup dir for backup.sh
BACKUP_PATH=$HOME/Koha/koha_backups

# Restore dir
RESTORE_SOURCE_DIR=$HOME/Koha/koha_backups/2025-12-06_18-49-26

# patch-koha-templates.sh у цьому репо не використовується для runtime.
# Для публічного образу зовнішні template override вимкнено.
# KOHA_OFFICIAL_TEMPLATES_DIR=$HOME/Koha/koha-official/debian/templates
# KOHA_TARGET_TEMPLATES_DIR=$HOME/Koha/koha-docker-build/files/docker/templates

CLOUDFLARE_TOKEN=

#Only for Ngrok
#DOMAIN_NAME=untaking-amusively-staci.ngrok-free.dev


# === ШЛЯХИ ДО ДАНИХ (VOLUME PATHS) ===
VOL_DB_PATH=$HOME/Koha/koha-volumes/mysql_data
VOL_ES_PATH=$HOME/Koha/koha-volumes/elastic_data
VOL_KOHA_CONF=$HOME/Koha/koha-volumes/koha_config
VOL_KOHA_DATA=$HOME/Koha/koha-volumes/koha_data
VOL_KOHA_LOGS=$HOME/Koha/koha-volumes/koha_logs
